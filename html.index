    <script>
        function checkAnswer(exerciseNumber) {
            const input = document.getElementById(`answer-${exerciseNumber}`);
            const feedback = document.getElementById(`feedback-${exerciseNumber}`);
            const correctAnswer = input.getAttribute('data-correct-answer');
            const userAnswer = input.value.trim().toLowerCase();
    
            if (userAnswer === correctAnswer.toLowerCase()) {
                feedback.textContent = '‚úÖ Correto!';
                feedback.className = 'text-green-500 text-sm';
            } else {
                feedback.textContent = `‚ùå Incorreto. A resposta correta √© "${correctAnswer}".`;
                feedback.className = 'text-red-500 text-sm';
            }
        }
    
        function checkAllAnswers() {
            const inputs = document.querySelectorAll('.exercise-input');
            inputs.forEach(input => {
                const exerciseNumber = input.id.split('-')[1];
                checkAnswer(exerciseNumber);
            });
        }
    
        function clearAnswers() {
            const inputs = document.querySelectorAll('.exercise-input');
            const feedbacks = document.querySelectorAll('.feedback-message');
            inputs.forEach(input => input.value = '');
            feedbacks.forEach(feedback => {
                feedback.textContent = '';
                feedback.className = 'feedback-message text-sm';
            });
        }
